#include <stdio.h>

int main(void){

	int value1;
	int value2;
	int value3;
	int value4;
	int value5;
	int value6;

	printf("First Array Setup...\n\n");

	printf("Please enter the 1st value: ");
	scanf("%d", &value1);
	printf("Please enter the 2nd value: ");
	scanf("%d", &value2);
	printf("Please enter the 3rd value: ");
	scanf("%d", &value3);

	printf("\nFirst array is: {%d, %d, %d}\n",value1,value2,value3);

	printf("\nSecond Array Setup...\n\n");

	printf("  Please enter the 1st value: ");
	scanf("%d", &value4);
	printf("  Please enter the 2nd value: ");
	scanf("%d", &value5);
	printf("  Please enter the 3rd value: ");
	scanf("%d", &value6);

	printf("\nSecond array is: {%d, %d, %d}\n\n",value4,value5,value6);

	printf("  C..a..l..c..u..l..a..t..i..n..g..\n\n");

	printf("Adding corresponding elements: {%d, %d, %d}\n\n",value1+value4,value2+value5,value3+value6);

	printf("Subtracting corresponding elements: {%d, %d, %d}\n\n", value1 - value4, value2 - value5, value3 - value6);

	printf("Multiplying corresponding elements: {%d, %d, %d}\n", value1 * value4, value2 * value5, value3 * value6);


	return 0;
