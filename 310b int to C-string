#include<stdio.h>


int main(void){

	int whole_num;
	char whole_char[9];

	printf("Enter a whole number (eight digits or less): ");
	scanf("%d", &whole_num);
	
	printf("\nConverting int input into ASCII C-String array...\n\n");

	sprintf(whole_char, "%d", whole_num);

	printf("Element 0 is: '%c' which is ASCII %d\n", whole_char[0], whole_char[0]);
	printf("Element 1 is: '%c' which is ASCII %d\n", whole_char[1], whole_char[1]);
	printf("Element 2 is: '%c' which is ASCII %d\n", whole_char[2], whole_char[2]);
	printf("Element 3 is: '%c' which is ASCII %d\n", whole_char[3], whole_char[3]);
	printf("Element 4 is: '%c' which is ASCII %d\n", whole_char[4], whole_char[4]);
	printf("Element 5 is: '%c' which is ASCII %d\n", whole_char[5], whole_char[5]);
	printf("Element 6 is: '%c' which is ASCII %d\n", whole_char[6], whole_char[6]);
	printf("Element 7 is: '%c' which is ASCII %d\n", whole_char[7], whole_char[7]);

	return 0;

}
