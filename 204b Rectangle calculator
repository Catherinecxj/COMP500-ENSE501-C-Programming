#include<stdio.h>

int main(void){

	int length;
	int width;

	printf("Rectangle Calculator:\n");
	printf("---------------------\n");
	
	printf("What is the width of the rectangle? ");
	scanf("%d", &length);
	printf("What is the height of the rectangle? ");
	scanf("%d", &width);
	
	int peri = (length + width) * 2;
	int area = length * width;

	printf("\nThe rectangle's perimeter is: %d\n",peri);
	printf("The rectangle's area is: %d\n",area);

	return 0;


}
