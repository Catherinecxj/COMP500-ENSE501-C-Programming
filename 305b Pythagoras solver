#include<stdio.h>
#include<math.h>

int main(void){

	float oppo;
	float adj;

	printf("What is the length of the opposite side? ");
	scanf("%f", &oppo);
	printf("What is the length of the adjacent side? ");
	scanf("%f", &adj);

	oppo = powf(oppo, 2);
	adj = powf(adj, 2);

	float hyp = sqrtf(oppo+adj);

	printf("\nThe length of the hypotenuse is:%f\n",hyp);

	return 0;

}
