#include <stdio.h>

int main(void){
	
	
	char name[3];
	

	printf("What is the first letter of your first name? ");
	scanf(" %c", &name[0]);
	printf("What is the second letter of your last name? ");
	scanf(" %c", &name[1]);

	name[2] = '\0';


	printf("\n\nYour initials are: %s\n",name);

	return 0;
}
