#include <stdio.h>

int main(void){

	printf("Please enter seven real numbers : \n\n");

	float i1 = 0.0f;
	float i2 = 0.0f;
	float i3 = 0.0f;
	float i4 = 0.0f;
	float i5 = 0.0f;
	float i6 = 0.0f;
	float i7 = 0.0f;

	printf("Input 1: ");
	scanf("%f",&i1);
	printf("Input 2: ");
	scanf("%f",&i2);
	printf("Input 3: ");
	scanf("%f",&i3);
	printf("Input 4: ");
	scanf("%f",&i4);
	printf("Input 5: ");
	scanf("%f",&i5);
	printf("Input 6: ");
	scanf("%f",&i6);
	printf("Input 7: ");
	scanf("%f",&i7);


	printf("\nArray input was: { %.1f, %.1f, %.1f, %.1f, %.1f, %.1f, %.1f }\n\n", i1, i2, i3, i4, i5, i6, i7);

	float sum = i1 + i2 + i3 + i4 + i5 + i6 + i7;

	printf("The sum of the array elements is: %.1f\n", sum);


	return 0;

}
